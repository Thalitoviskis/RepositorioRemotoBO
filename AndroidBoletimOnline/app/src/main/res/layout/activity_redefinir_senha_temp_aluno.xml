<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/design_default_color_primary"
    tools:context=".view.RedefinirSenhaTempAluno">


    <ImageView
        android:id="@+id/tvImageAlert"
        android:layout_width="73dp"
        android:layout_height="57dp"
        android:layout_marginStart="169dp"
        android:layout_marginTop="101dp"
        android:layout_marginEnd="169dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_dialog_info" />

    <TextView
        android:id="@+id/tvAlert"
        android:layout_width="294dp"
        android:layout_height="82dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="32dp"
        android:text="Para a sua seguranÃ§a,  redefina agora sua senha.   "
        android:textColor="#D7FFFFFF"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvImageAlert" />

    <EditText
        android:id="@+id/edtSenhaTempAluno"
        android:layout_width="237dp"
        android:layout_height="52dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="32dp"
        android:drawableLeft="@drawable/ic_menu_cadeado"
        android:drawableTint="@color/CorCad"
        android:ems="10"
        android:hint="  Digite sua nova senha"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAlert" />

    <EditText
        android:id="@+id/edtConfirSenhaTempAluno"
        android:layout_width="237dp"
        android:layout_height="52dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:drawableLeft="@drawable/ic_menu_cadeado"
        android:drawableTint="@color/CorCad"
        android:ems="10"
        android:hint="  Digite sua nova senha"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtSenhaTempAluno" />

    <Button
        android:id="@+id/btnOK"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="#FBFBFB"
        android:text="Ok!"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtConfirSenhaTempAluno" />

</androidx.constraintlayout.widget.ConstraintLayout>